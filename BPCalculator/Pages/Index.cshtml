@page
@model BPCalculator.Pages.IndexModel

<h2>Blood Pressure Calculator</h2>

<form method="post">
  <div class="form-group">
    <label asp-for="Systolic">Systolic</label>
    <input asp-for="Systolic" class="form-control" />
    <span asp-validation-for="Systolic" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Diastolic">Diastolic</label>
    <input asp-for="Diastolic" class="form-control" />
    <span asp-validation-for="Diastolic" class="text-danger"></span>
  </div>
  <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@if (!string.IsNullOrEmpty(Model.Category))
{
  <div class="alert alert-info mt-3">
    <strong>Your blood pressure category is:</strong>
    <span>@Model.Category</span>
  </div>
}

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}